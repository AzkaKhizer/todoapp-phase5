# Database connection (Neon PostgreSQL)
DATABASE_URL=postgresql+asyncpg://neondb_owner:password@host-pooler.region.aws.neon.tech/neondb?sslmode=require

# Better Auth Configuration
# CRITICAL: This secret MUST be EXACTLY the same as frontend/.env BETTER_AUTH_SECRET
# Generate with: openssl rand -hex 32
BETTER_AUTH_SECRET=your-secret-key-here-min-32-chars-use-same-in-frontend
BETTER_AUTH_URL=http://localhost:3000

# Legacy JWT Configuration (deprecated, use BETTER_AUTH_SECRET)
JWT_SECRET=your-secret-key-here-min-32-chars-use-same-in-frontend
JWT_EXPIRY_HOURS=24

# CORS Configuration
CORS_ORIGINS=http://localhost:3000

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
